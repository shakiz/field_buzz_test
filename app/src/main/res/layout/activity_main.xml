<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_white_1000"
        tools:context=".activities.MainActivity">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:layout_marginTop="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/md_white_1000"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    app:elevation="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/name"
                                android:textSize="16sp"
                                android:textColor="@color/md_grey_800"/>

                            <EditText
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edit_text_rectangle_bg"
                                android:ellipsize="end"
                                android:focusable="true"
                                android:maxLength="256"
                                android:gravity="center|left"
                                android:hint="@string/enter_name"
                                android:maxLines="1"
                                android:paddingLeft="8dp"
                                android:scrollHorizontally="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:textColorHint="@color/colorAccent"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/email"
                                android:textSize="16sp"
                                android:textColor="@color/md_grey_800"/>

                            <EditText
                                android:id="@+id/email"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edit_text_rectangle_bg"
                                android:ellipsize="end"
                                android:focusable="true"
                                android:gravity="center|left"
                                android:hint="@string/enter_email"
                                android:maxLines="1"
                                android:maxLength="256"
                                android:paddingLeft="8dp"
                                android:scrollHorizontally="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:textColorHint="@color/colorAccent"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/phone"
                                android:textSize="16sp"
                                android:textColor="@color/md_grey_800"/>

                            <EditText
                                android:id="@+id/phone"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edit_text_rectangle_bg"
                                android:ellipsize="end"
                                android:focusable="true"
                                android:gravity="center|left"
                                android:hint="@string/phone_hint"
                                android:inputType="number"
                                android:maxLength="14"
                                android:maxLines="1"
                                android:paddingLeft="8dp"
                                android:scrollHorizontally="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:textColorHint="@color/colorAccent"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/full_address"
                                android:textSize="16sp"
                                android:textColor="@color/md_grey_800"/>

                            <EditText
                                android:id="@+id/full_address"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edit_text_rectangle_bg"
                                android:ellipsize="end"
                                android:focusable="true"
                                android:gravity="center|left"
                                android:hint="@string/enter_full_address"
                                android:maxLines="1"
                                android:maxLength="512"
                                android:paddingLeft="8dp"
                                android:scrollHorizontally="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:textColorHint="@color/colorAccent"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/name_of_university"
                                android:textSize="16sp"
                                android:textColor="@color/md_grey_800"/>

                            <EditText
                                android:id="@+id/name_of_university"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edit_text_rectangle_bg"
                                android:ellipsize="end"
                                android:focusable="true"
                                android:gravity="center|left"
                                android:hint="@string/enter_name_of_university"
                                android:maxLines="1"
                                android:maxLength="256"
                                android:paddingLeft="8dp"
                                android:scrollHorizontally="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:textColorHint="@color/colorAccent"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/graduation_year"
                                android:textSize="16sp"
                                android:textColor="@color/md_grey_800"/>

                            <EditText
                                android:id="@+id/graduation_year"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edit_text_rectangle_bg"
                                android:ellipsize="end"
                                android:focusable="true"
                                android:gravity="center|left"
                                android:hint="@string/enter_graduation_year"
                                android:maxLines="1"
                                android:inputType="number"
                                android:paddingLeft="8dp"
                                android:scrollHorizontally="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:textColorHint="@color/colorAccent"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/cgpa"
                                android:textSize="16sp"
                                android:textColor="@color/md_grey_800"/>

                            <EditText
                                android:id="@+id/cgpa"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edit_text_rectangle_bg"
                                android:ellipsize="end"
                                android:focusable="true"
                                android:gravity="center|left"
                                android:hint="@string/enter_cgpa"
                                android:maxLines="1"
                                android:inputType="numberDecimal"
                                android:paddingLeft="8dp"
                                android:scrollHorizontally="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:textColorHint="@color/colorAccent"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/applying_in"
                                android:textSize="16sp"
                                android:textColor="@color/md_grey_800"/>

                            <Spinner
                                android:id="@+id/applying_in"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edit_text_rectangle_bg"
                                android:gravity="center|left"
                                android:inputType="numberDecimal"
                                android:paddingLeft="8dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/experience_in_months"
                                android:textSize="16sp"
                                android:textColor="@color/md_grey_800"/>

                            <EditText
                                android:id="@+id/experience_in_months"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edit_text_rectangle_bg"
                                android:ellipsize="end"
                                android:focusable="true"
                                android:gravity="center|left"
                                android:hint="@string/enter_experience"
                                android:maxLines="1"
                                android:inputType="numberSigned"
                                android:paddingLeft="8dp"
                                android:scrollHorizontally="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:textColorHint="@color/colorAccent"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/current_work_place_name"
                                android:textSize="16sp"
                                android:textColor="@color/md_grey_800"/>

                            <EditText
                                android:id="@+id/current_work_place_name"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edit_text_rectangle_bg"
                                android:ellipsize="end"
                                android:focusable="true"
                                android:gravity="center|left"
                                android:hint="@string/enter_current_organisation"
                                android:maxLines="1"
                                android:maxLength="256"
                                android:paddingLeft="8dp"
                                android:scrollHorizontally="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:textColorHint="@color/colorAccent"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/expected_salary"
                                android:textSize="16sp"
                                android:textColor="@color/md_grey_800"/>

                            <EditText
                                android:id="@+id/expected_salary"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edit_text_rectangle_bg"
                                android:ellipsize="end"
                                android:focusable="true"
                                android:gravity="center|left"
                                android:hint="@string/enter_expected_salary"
                                android:maxLines="1"
                                android:inputType="numberSigned"
                                android:paddingLeft="8dp"
                                android:scrollHorizontally="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:textColorHint="@color/colorAccent"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/field_buzz_reference"
                                android:textSize="16sp"
                                android:textColor="@color/md_grey_800"/>

                            <EditText
                                android:id="@+id/field_buzz_reference"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edit_text_rectangle_bg"
                                android:ellipsize="end"
                                android:focusable="true"
                                android:gravity="center|left"
                                android:hint="@string/enter_field_buzz_reference"
                                android:maxLines="1"
                                android:maxLength="256"
                                android:paddingLeft="8dp"
                                android:scrollHorizontally="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:textColorHint="@color/colorAccent"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/github_project_url"
                                android:textSize="16sp"
                                android:textColor="@color/md_grey_800"/>

                            <EditText
                                android:id="@+id/github_project_url"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edit_text_rectangle_bg"
                                android:ellipsize="end"
                                android:focusable="true"
                                android:gravity="center|left"
                                android:hint="@string/enter_github_project_url"
                                android:maxLines="1"
                                android:maxLength="512"
                                android:paddingLeft="8dp"
                                android:scrollHorizontally="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:textColorHint="@color/colorAccent"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addNewRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="12dp"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/md_green_600"
            app:fabSize="normal"
            android:translationZ="3dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:layout_anchorGravity="bottom|right|end"/>

    </RelativeLayout>

</layout>